{
  "dataset": {
    "mnist_data_dir": "data/MNIST",
    "batch_size": 64
  },
  "model": {
    "name": "lenet",
    "dropout_rate": 0.4
  },
  "train": {
    "num_epochs": 5,
    "learning_rate": 0.001,
    "optimizer": "adam",
    "criterion": "cross_entropy",
    "scheduler": "constant",
    "num_warmup_steps": 0,
    "use_class_weights": false,
    "weight_type": "inverse",
    "save_path": "best_model.pth",
    "seed": 42
  }
}